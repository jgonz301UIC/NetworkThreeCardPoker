<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="odds-window">

    <center>
        <VBox spacing="18" alignment="CENTER" style="-fx-padding: 30;">

            <Label text="Three Card Poker"
                   styleClass="odds-title" />

            <VBox spacing="6" alignment="CENTER">
                <Label text="ANTE BONUS PAYOUTS"
                       styleClass="odds-section-title" />

                <Label text="Straight — 1 to 1"        styleClass="odds-entry"/>
                <Label text="Three of a Kind — 4 to 1" styleClass="odds-entry"/>
                <Label text="Straight Flush — 5 to 1"  styleClass="odds-entry"/>
            </VBox>

            <Separator style="-fx-padding: 10 0 10 0;" />

            <VBox spacing="6" alignment="CENTER">
                <Label text="PAIR PLUS PAYOUTS"
                       styleClass="odds-section-title" />

                <Label text="Pair — 1 to 1"                 styleClass="odds-entry"/>
                <Label text="Flush — 3 to 1"                styleClass="odds-entry"/>
                <Label text="Straight — 6 to 1"             styleClass="odds-entry"/>
                <Label text="Three of a Kind — 30 to 1"     styleClass="odds-entry"/>
                <Label text="Straight Flush — 40 to 1"      styleClass="odds-entry"/>
            </VBox>

        </VBox>
    </center>

</BorderPane>
